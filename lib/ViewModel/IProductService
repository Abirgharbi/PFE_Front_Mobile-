abstract class IProductService {
  /// Récupère une liste de produits depuis un endpoint spécifique.
  Future<List<Product>> getProducts(String endpoint, {Map<String, dynamic>? queryParams});

  /// Ajoute un produit à la wishlist via une API ou une base locale.
  Future<void> addToWishlist(Product product);

  /// Supprime un produit de la wishlist via une API ou une base locale.
  Future<void> removeFromWishlist(Product product);
}